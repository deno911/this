{
  "tasks": {
    "prepare": "which land &>/dev/null || deno install -A -f -n land https://deno.land/x/land/cli.ts; deno fmt && deno lint --unstable; deno test --no-check",
    "release": "deno task prepare && land publish -A"
  },
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "deno.window",
      "dom",
      "esnext"
    ],
    "strict": true,
    "strictNullChecks": false
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any",
        "ban-types",
        "ban-ts-comment",
        "no-var"
      ]
    },
    "files": {
      "exclude": [
        ".devcontainer",
        ".vscode",
        ".git*"
      ]
    }
  },
  "fmt": {
    "files": {
      "exclude": [
        ".devcontainer",
        ".vscode",
        ".git*"
      ]
    }
  },
  "test": {
    "files": {
      "exclude": [
        ".devcontainer",
        ".vscode",
        ".git*"
      ]
    }
  }
}
